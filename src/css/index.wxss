/* pages/common/index.wxss */
.page-content{
  background: #F3F4F7;
  height: 100%;
}
page{
  background: #F3F4F7;
}
/* 页面块及标题 */
.block{
  background: white;
  margin-bottom: 20rpx;
}
.block-tit{
  height: 75rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  color: #232326;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.block-tit view{
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.block-tit image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.block-hasline{
  border-bottom: 1px solid #F0F2F5;
}

.brand-banner{
  position: relative;
}
.brand-banner image{
  width: 100%;
  display: block;
}
.bb-cover{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  padding: 0 0 20rpx 20rpx;
  box-sizing: border-box;
}
.bb-cover view{
  align-self: flex-end;
}
.bb-cover image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  display: inline-block;
  vertical-align: middle;
  background: #fff;
}
.bb-cover text{
  font-size: 40rpx;
  color: #fff;
  vertical-align: middle;
  padding-left: 20rpx;
}

/* 地址样式  */
.brand-shop{
  padding: 24rpx 24rpx 20rpx;
  position: relative;
}
.bs-tit{
  line-height: 1;
  padding: 0 0 16rpx;
}
.bs-name{
  font-size: 30rpx;
  color: #232326;
}
.bs-dis{
  float: right;
  color: #848689;
  font-size: 24rpx;
  line-height: 42rpx;
}
.bs-address{
  padding: 0 0 0 2rpx;
  line-height: 1;
}
.bs-flex{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between
}
.bs-addl{
  width: 580rpx;
}
.bs-addl-icon{
  padding-top: 4rpx;
  width: 32rpx;
  height: 32rpx;
  float: left;
}
.bs-addl-add{
  font-size: 24rpx;
  color: #4A4A4A;
  margin-left: 42rpx;
  line-height: 42rpx;
  padding-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bs-addl-time{
  font-size: 22rpx;
  color: #848689;
  padding-left: 42rpx;
  line-height: 42rpx;
}
.bs-addr{
  flex: 0 1 106rpx;
  box-sizing: border-box;
}
.cutline{
  height: 24rpx;
  width: 1px;
  background: #E3E5E9;
  display: inline-block;
  vertical-align: middle;
  margin-right: 45rpx;
}
.bs-call{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}


/* 优惠券样式  */
.coupon{
  line-height: 1;
}
.coupon-list{
  padding-bottom: 19rpx;
}
.coupon-li{
  display: flex;
  padding: 19rpx 0 0 12rpx;
  box-sizing: border-box;
}
.coupon-li:last-of-type .coupon-msg{
  border: none;
}
.coupon-li:last-of-type .coupon-btn{
  border: none;
}
.coupon-quota{
  flex:0 1 212rpx;
  position: relative;
  height: 144rpx;
}
.coupon-quota image{
  width: 100%;
  height: 100%;
}
.coupon-quota-num{
  position: absolute;
  font-size: 48rpx;
  color: #fff;
  text-align: center;
  width: 192rpx;
  height: 74rpx;
  line-height: 74rpx;
  left: 11rpx;
  top: 11rpx;
  padding-right: 6rpx;
  box-sizing: border-box;
}
.coupon-quota-num text{
  font-size: 30rpx;
  vertical-align: middle
}
.coupon-quota-name{
  color: #F9685C;
  font-size: 24rpx;
  position: absolute;
  width: 192rpx;
  left: 11rpx;
  top: 85rpx;
  text-align: center;
  line-height: 50rpx;
}
.coupon-msg{
  flex: 1;
  color: #4A4A4A;
  font-size: 26rpx;
  padding-top: 8rpx;
  border-bottom: 1px solid #F0F2F5;
  padding-bottom: 21rpx;
}
.coupon-msg>text{
  line-height: 40rpx;
  display: block;
  margin-bottom: 4rpx;
}
.coupon-msg-name{
  color: #848689;
}
.coupon-msg-surplus{
  padding-top: 6rpx;
  font-size: 22rpx;
}
.coupon-btn{
  box-sizing: border-box;
  padding-right: 22rpx;
  flex: 0 1 142rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #F0F2F5;
}
.coupon-btn view{
  width: 120rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  border-radius: 54rpx;
  color: white;
  text-align: center;
  background: -webkit-linear-gradient(left,#FF482c 0%,#FF113D 100%);
  box-shadow: 0 0 20rpx #FFCED3;
}
.coupon-btn view.coupon-btn-alget{
  background: #D1D1D1;
  box-shadow: none;
}
