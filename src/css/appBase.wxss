.jd-red-bg {
	background-color: #f23030 !important;
}

.jd-red {
	color: #f23030 !important;
}

.jd-red-bd {
	border-color: #f23030 !important;
}
/* toTop wxss */

.bottom-to-top {
	position: fixed;
	bottom: 216rpx;
	right: 20rpx;
	width: 78rpx;
	height: 78rpx;
	z-index: 300;
	transform-origin: 0;
	opacity: 1;
	transform: scale(1, 1);
}

/*模版消息推送*/

.message-push-btn {
	padding: 0;
	border-radius: 0;
	overflow: inherit;
	text-align: inherit;
}

.message-push-btn:after {
	border: none;
	border-radius: 0;
}

.font-weight-bi {
	font-weight: bold;
}
