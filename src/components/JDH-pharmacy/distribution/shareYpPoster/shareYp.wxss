
/* @import '../../resource/iconfont/iconfont'; */
.modal,.toast{
  position: fixed;
  background: rgba(51,51,51, .7);
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  font-family: PingFangSC-Regular;
}
.toast{
  z-index: 10000;
}
.modal-content, .toast-content{
  width: 550rpx;
}
.toast-content{
  background: #fff;
  border-radius: 20rpx;
}
.toast-text{
  height: 163rpx;
  line-height: 163rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}
.toast-btn{
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  border-top: 1rpx solid #E5E6E8;
}

/*图片 start */
.img-wrap{
  background: #f7f7f7;
  position: relative;
  width: 550rpx;
  height: 551rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}
.img-wrap image{
  display: block;
  width: 550rpx;
  height: 550rpx;
  border:none;
}
.img-wrap image.center{
  position: absolute;
  width: 320rpx;
  height: 230rpx;
  top: 50%;
  left: 50%;
  margin-left: -160rpx;
  margin-top: -115rpx;
}
.close-icon{
  position: absolute;
  right: -28rpx;
  top: -28rpx;
  height: 56rpx;
  width: 56rpx;
  text-align: center;
  line-height: 48rpx;
  border-radius: 100%;
  background: #BBBBBB;
}
.close-icon .icon-guanbi{
  font-size: 24rpx;
  color: #fff;
}
/*图片 end */


/*详细信息*/
.details-wrap{
  background: #f7f7f7;
  padding-bottom: 30rpx;
  padding-top: 20rpx;
  margin-top: -1rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}
/*商品名称 start*/
.title{
  text-align: left;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
  height: 84rpx;
  line-height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0rpx 20rpx;
  margin-bottom: 15rpx;
}
.tag{
  display: inline-block;
  background: #F10216;
  border-radius: 18rpx;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0rpx 14rpx;
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: normal;
  vertical-align: top;
  margin-top: 3rpx;
}
/*商品名称 end*/

.details-flex{
  display: flex;
  margin: 0rpx 20rpx 0rpx 20rpx;
}
.flex-left{
  flex-grow: 1;
}
.flex-right{
  width: 98rpx;
}

/*价格 start*/
.price{
  line-height: 34rpx;
  font-size: 0;
  text-align: left;
}
.red-price-label{
  font-size: 26rpx;
  color: #F10216;
  font-weight: bold;
}
.red-price-lo{
  font-size: 22rpx;
  color: #F10216;
  font-weight: bold;
  margin-left: 10rpx;
  margin-right: 5rpx;
}
.red-price-val{
  font-size: 30rpx;
  color: #F10216;
  font-weight: bold;
}
.gray-price-label{
  font-size: 20rpx;
  color: #999999;
  margin-left: 11rpx;
}
.gray-price-val{
  font-size: 20rpx;
  color: #999999;
  text-decoration: line-through;
}
/*价格 end*/

/*邀请人 start*/
.user{
  margin-top: 30rpx;
  display: flex;
}
.user-icon{
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #FFFFFF;
  border-radius: 100%;
  overflow: hidden;
}
.user-icon image{
  width: 60rpx;
  height: 60rpx;
}
.user-text{
  margin-left: 10rpx;
}
.user-name{
  font-size: 24rpx;
  color: #333333;
  text-align: left;
}
.user-tips{
  margin-top: 5rpx;
  font-size: 20rpx;
  color: #999999;
  text-align: left;
}
/*邀请人 end*/

/*二维码 start*/
.wxcode{
  width: 98rpx;
  height: 98rpx;
  background: #fff;
  border-radius: 5rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wxcode image{
  display: block;
  border: none;
  width: 80rpx;
  height: 80rpx;
}
.h5-canvas{
  position: absolute;
  width: 98rpx;
  height: 98rpx;
  top: -2000rpx;
  left: -2000rpx;
}
.tips{
  font-size: 20rpx;
  color: #999999;
  text-align: center;
  margin-top: 10rpx;
}
/*二维码 end*/

/*按钮 start*/
.btn{
  border-radius: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FFFFFF;
  font-weight: bold;
}
.red-btn {
  width: 100%;
  background: #F10216;
  margin: 0rpx;
  margin-top: 30rpx;
  padding: 0rpx;
}
.btn-wrap{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.orange-btn{
  background: #FF863B;
  width: 265rpx;
}
.red-btn1{
  background: #F10216;
  width: 265rpx;
  margin: 0;
}
.orange-btn.disabled{
  background: rgba(255,134,59, .9);
  color: #eee;
}
/*按钮 end*/

/*分享图片canvas*/
.share-canvas{
  position: absolute;
  width: 720px;
  height: 1090px;
  top: 0rpx;
  left: -2000px;
  top: -2000px;
  background: #F7F7F7;
}
