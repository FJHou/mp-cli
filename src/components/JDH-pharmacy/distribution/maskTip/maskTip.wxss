.mask1 {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(51, 51, 51, 0.7);
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  flex-direction: column;
}

.toShopBorder {
  width: 3rpx;
  height: 80rpx;
  background: rgba(216, 216, 216, 0.7);
}

.markClose {
  width: 64rpx;
  height: 64rpx;
  margin-top: -10rpx;
}

.toShopBtn {
  height: 72rpx;
  width: 280rpx;
  display: flex;
  justify-content: center;
  background: linear-gradient(90deg, #f8b10e 0%, #f76b1c 100%);
  align-items: center;
  color: #fff;
  border-radius: 44rpx;
  box-shadow: 0 2px 4px 0 rgba(221, 101, 19, 0.40);
  font-size: 32rpx;
  line-height: 32rpx;
}

.markCloseIcon {
  font-size: 64rpx;
  color: #ccc;
}

.tan-v {
  width: 650rpx;
  height: 440rpx;
  padding-bottom: 10rpx;
  background: #fff9ec;
  border-radius: 20rpx;
  opacity: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

.msg {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.msg-txt {
  padding: 0 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  flex: 1;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  /* margin: 26rpx  30rpx 0  30rpx; */
}

.msg-v{
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}
