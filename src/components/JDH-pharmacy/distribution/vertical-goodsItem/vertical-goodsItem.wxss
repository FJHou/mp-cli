page {
  font-family: PingFangSC-Regular;
}
.font0{
  font-size: 0rpx;
}
.list-item{
  width: 330rpx;
  margin-bottom: 20rpx;
}
.img-item{
  position: relative;
}
.img-item image{
  width: 100%;
  height: 100%;
  border: none;
}
.img-item image.center{
  position: absolute;
  width: 160rpx;
  height: 114rpx;
  top: 50%;
  left: 50%;
  margin-top: -57rpx;
  margin-left: -80rpx;
}
.list-item-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: normal;
  height: 28rpx;
  line-height: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 20rpx;
}
.list-item-price{
  margin: 10rpx 0rpx;
  font-size: 0rpx;
  height: 28rpx;
  line-height: 28rpx;
  overflow: hidden;
}
.list-item-price .price-red{
  font-size: 26rpx;
  color: #F10216;
  font-weight: bold;
}
.list-item-price .price-gray{
  font-size: 20rpx;
  color: #BBBBBB;
  text-decoration: line-through;
  margin-left: 10rpx;
}
/*分享赚*/
.zhuan-block{
  border: 1rpx solid #F10216;
  border-radius: 4rpx;
  display: inline-block;
  min-width: 190rpx;
  text-align: left;
  vertical-align: top;
}
.zhuan-block-content{
  margin: 0rpx 25rpx;
  font-size: 22rpx;
  color: #F10216;
  height: 36rpx;
  line-height: 36rpx;
}