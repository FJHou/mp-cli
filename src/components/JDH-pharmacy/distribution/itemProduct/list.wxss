/* 购买按钮 */
 .btn-text{
  font-size:24rpx;
  height:37rpx;
  line-height:37rpx;
  text-align:center;
}
.btn-now{
  overflow:hidden;
}
.btn-now-gray{
  overflow:hidden;
}
.btn-now-child{
  border:2rpx solid #F10216 ;
  border-radius: 8rpx;
  height:76rpx;
  color:#F10216;
  font-weight: bold;
}
.btn-now-child:after{
  content:' ';
  width:70%;
  height:2rpx;
  background:#f10216;
  top:50%;
  position:absolute;
  margin-top:-1rpx;
  left:50%;
  margin-left:-35%;
}

.btn-now-child-gray{
  border:2rpx solid #BBB;
  border-radius: 8rpx;
  height:76rpx;
  color:#BBB;
  font-weight: bold;
  background: #fff;
}
.btn-now-child-gray:after{
  content:' ';
  width:70%;
  height:2rpx;
  background:#BBB;
  /* border:2rpx solid gray; */
  top:50%;
  position:absolute;
  margin-top:-1rpx;
  left:50%;
  margin-left:-35%;
}



.btn-now-gray:before{
  display: hidden;
  width:10rpx;
