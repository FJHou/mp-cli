
/*订单商品信息 start*/

.order-product-details {
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  font-size: 0rpx;
}

.order-product-details .pic {
  width: 220rpx;
  height: 220rpx;
  flex-shrink: 0;
  flex-grow: 0;
}

.order-product-details .product {
  flex: 1;
  padding-left: 24rpx;
}

.product .title {
  height: 80rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 30rpx;
}
.height34{
  height: 34rpx;
}
.red-block{
  border: 1rpx solid #FF4454;
  border-radius: 4rpx;
  display: inline-block;
  /* line-height: 32rpx; */
  /* height: 34rpx; */
  font-size: 24rpx;
}
.red-block .red-left{
  padding: 5rpx 8rpx;
  color: #FF4454;
}
.red-block  .red-right{
  padding: 5rpx 10rpx;
  background: #FF4454;
  color: #FFFFFF;
}
.price-block{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.price{
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}
.num{
  font-size: 28rpx;
  color: #333333;
}
/*订单商品信息 end*/