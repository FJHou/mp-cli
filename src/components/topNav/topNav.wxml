<!-- components/topNav.wxml -->
<!-- template.wxml -->
<view clas="topPanel" style="padding-top:{{someData.statusBarHeight+someData.titleBarHeight}}px;">
  <view class="hh-header" style="background-color: {{navStyle.bgColor}}">
    <view class="status-bar" style="height:{{someData.statusBarHeight}}px"></view>
    <view class="title-bar" style="height:{{someData.titleBarHeight}}px">
      <view class="hh-nav-placeholder">
        <view wx:if="{{isShowBack=='true'}}" class='hh-nav-back ico-back' bindtap='goback'></view>
        <slot wx:else name="before"></slot>
      </view>
      <view class="hh-title pharmacy" wx:if="{{innerTitle == ''}}"></view>
      <view class="hh-title" wx:else>{{innerTitle}}</view>
      <view class="hh-nav-placeholder"></view>
    </view>
  </view>
</view>
<slot></slot>