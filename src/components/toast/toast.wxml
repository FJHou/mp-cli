<template name="toast">
  <view class="shade-floor" wx:if="{{message}}" style="align-items:{{alignItems}}">
    <view class="message-box content-box" style="margin-top:{{marginTop}}">
      <view class="message-box-icon">
        <icon class="message-icon {{icon}}"></icon>
      </view>
      <text class="message-box-content">{{message}}</text>
    </view>
  </view>
</template>