/* 门店自提 */
.ztcode-wrap {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.6);
}
.ztcode {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	width: 540rpx;
	height: 700rpx;
	border-radius: 20rpx;
	overflow: hidden;
	text-align: center;
	font-size: 30rpx;
	background: transparent;
}
.ztcode .bg {
	position: absolute;
	left: 0;
	top: 0;
	width: 540rpx;
	height: 700rpx;
	background: transparent;
}
.ztcode .cont {
	position: absolute;
	left: 0;
	top: 0;
	width: 540rpx;
	height: 700rpx;
}
.ztcode .tit {
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1px solid #e8e8e8;
}
.ztcode .codenum {
	height: 120rpx;
	line-height: 120rpx;
