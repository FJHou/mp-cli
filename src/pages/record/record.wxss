/* 取消弹窗 */
.cancel-modal {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.6);
}
.modal-wrapper {
	background: #fff;
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 912rpx;
	box-sizing: border-box;
	padding: 0 30rpx;
}
.modal-header {
	position: relative;
	height: 75rpx;
	text-align: center;
	font: 30rpx/75rpx PingFangSC-Regular;
	color: #2e2d2d;
}
.header-close {
	position: absolute;
	width: 24rpx;
	height: 24rpx;
	top: 50%;
	right: 0;
	transform: translateY(-50%);
}
.header-close::before {
	content: '';
	width: 28rpx;
	height: 2rpx;
	background: #000;
	transform: rotate(45deg);
	position: absolute;
	top: 12rpx;
	left: 0rpx;
}
.header-close::after {
	content: '';
	width: 28rpx;
	height: 2rpx;
	background: #000;
	transform: rotate(-45deg);
	position: absolute;
	top: 12rpx;
	left: 0rpx;
}
.modal-tips {
	margin: 24rpx 0rpx;
	background: #f5f5f5;
	padding: 24rpx;
	font: 30rpx/42rpx PingFangSC-Regular;
	color: #2e2d2d;
}
.tips-content {
	font-size: 22rpx;
	line-height: 30rpx;
	white-space: pre-line;
}
.modal-content {
	height: 540rpx;
	font: 30rpx/42rpx PingFangSC-Regular;
	color: #2e2d2d;
}
.content-title {
	font-family: PingFangSC-Medium;
}
.red {
	color: #f0250e;
	margin-right: 8rpx;
}
.modal-btn {
	margin: 0 -30rpx;
	height: 100rpx;
	background-image: linear-gradient(to left, #ff4f18 0%, #f20000 100%);
	text-align: center;
	font: 36rpx/100rpx PingFangSC-Regular;
	color: #fff;
}
.dis-btn {
	background: #dadada;
}
.radio-group {
	display: block;
}
.radio-item {
	display: flex;
	align-items: center;
	padding: 24rpx 0rpx;
}
.radio-lab {
	width: 40rpx;
	height: 32rpx;
	position: relative;
}
.radio-lab .cur {
	position: relative;
	display: block;
	box-sizing: border-box;
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	background-color: #f0250e;
}
.radio-lab .cur::before {
	content: '';
	width: 16rpx;
	height: 8rpx;
	background: transparent;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate3d(-50%, -75%, 0) rotate(-45deg);
	border: 4rpx solid transparent;
	border-left-color: #fff;
	border-bottom-color: #fff;
}
.radio-lab .dis {
	width: 36rpx;
	height: 36rpx;
	border-radius: 50%;
}
.radio-lab radio {
	width: 32rpx;
	height: 32rpx;
	opacity: 0;
	position: absolute;
	left: 0;
	top: 0;
}
.radio-lab .def {
	box-sizing: border-box;
	width: 32rpx;
	height: 32rpx;
	border: 2rpx solid #848484;
	border-radius: 50%;
}
.radio-bd {
	flex: 1;
}
.radio-bd-tit {
	font-size: 30rpx;
	color: #2e2d2d;
}
