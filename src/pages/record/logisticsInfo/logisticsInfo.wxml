<!--pages/logisticsInfo/logisticsInfo.wxml-->
<view class='page-content'>
  <view class="logistics-info-wrapper">
    <view>订单号：{{orderId}}</view>
    <view>运单号：{{carryCode}}</view>
    <view>国内承运人：{{operator}}</view>
    <view>国内承运人电话：{{tel}}</view>
  </view>

  <view class="logistics-schedule-wrapper">
      <view class='status-item {{item.start?"": "small"}}'  wx:for="{{logisticsList}}" wx:key="index">
        <view class='status-mark'>
          <view class='status-mark-tl'></view>
          <view class='status-mark-cir'></view>
          <view class='status-mark-bl'></view>
        </view>
        <view class='status-word'>
          <view class="status-desc-title" wx:if="{{item.start}}">{{item.groupType}}</view>
          <view>{{item.content}}</view>
          <view>{{item.msgTime}}</view>
        </view>
      </view>
  </view>

  
  <view class='bt-blank'></view>
  <view class='bt'>
    <view class='bt-na'>京东会员码</view>
    <view><image class='logo' mode='widthFix' src='https://thunder.jd.com/jpass/img/logo_buttom.png'></image></view>
  </view>

  <return-top show-flag="{{false}}" isReturnTop="{{false}}" isReturnHome="{{true}}"></return-top>
</view>