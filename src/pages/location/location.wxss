.chice-location {
	width: 100%;
	height: 80rpx;
	background: linear-gradient(334deg, rgba(255, 249, 242, 1) 0%, rgba(255, 243, 234, 1) 100%);
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}

.choice-text {
	font-size: 28rpx;
	color: rgba(251, 136, 50, 1);
}

.send-to {
	margin-left: 30rpx;
	margin-right: 20rpx;
}

.send-location {
	width: 600rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.cur-location {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	width: 100%;
	height: 110rpx;
}

.cur-location-left {
	width: 600rpx;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}

.cur-location-flag {
	width: 32rpx;
	height: 32rpx;
	margin-left: 28rpx;
	margin-right: 15rpx;
}

.re-location {
	font-size: 28rpx;
	color: #ff413f;
	margin-right: 30rpx;
}

.cur-location-text {
	width: 520rpx;
	font-weight: bold;
	font-size: 30rpx;
	color: rgba(46, 45, 45, 1);
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.cur-location-flag {
	font-size: 28rpx;
	color: rgba(70, 166, 255, 1);
}

.block {
	line-height: 72rpx;
	background: #fbfbfb;
	font-size: 24rpx;
	color: #b3b3b3;
	padding-left: 30rpx;
}

.adress-text {
	font-size: 28rpx;
	color: rgba(173, 173, 173, 1);
	margin: 37rpx 0 27rpx 30rpx;
}

.adress-info {
	padding: 30rpx;
	display: flex;
	justify-content: space-between;
	border-bottom: 2rpx solid rgba(191, 191, 191, 0.2);
}
.adress-info .left {
	flex: 1;
}
.adress-info .right {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 20rpx;
}

.adress-location {
	width: 100%;
	font-weight: bold;
	font-size: 30rpx;
}

.adress-person {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}
.adress-edit-icon {
	width: 46rpx;
	height: 46rpx;
}
.adress-name {
	margin-right: 20rpx;
}

.adress-list-text {
	font-size: 26rpx;
}

.avaliable-color {
	color: rgba(46, 45, 45, 1);
}

.unAvaliable-color {
	color: rgba(179, 179, 179, 1);
}

.no-send-text {
	width: 168rpx;
	height: 50rpx;
	background: rgba(248, 248, 248, 1);
	border-radius: 4rpx;
	line-height: 50rpx;
	font-size: 24rpx;
	color: rgba(179, 179, 179, 1);
	text-align: center;
	padding: 0 12rpx;
	margin: 20rpx 0 0 30rpx;
}

.add-location {
	position: fixed;
	left: 36rpx;
	width: 678rpx;
	height: 76rpx;
	background: linear-gradient(-135deg, #f24d0c 0%, #f2270c 70%, #f2140c 100%);
	border-radius: 42rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.ipx_pos {
	bottom: 52rpx;
}

.normal_pos {
	bottom: 12rpx;
}

.add-flag {
	width: 22rpx;
	height: 24rpx;
}

.add-text {
	margin-left: 10rpx;
	font-weight: bold;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 1);
}

.no-adress-text {
	font-size: 30rpx;
	color: #bfbfbf;
	line-height: 46rpx;
}

.adress-list {
	padding-bottom: 150rpx;
}

.login-button {
	display: inline-block;
	width: 264rpx;
	line-height: 76rpx;
	font-size: 26rpx;
	color: #ffffff;
	background-image: linear-gradient(-135deg, #f2140c 0%, #f2270c 70%, #f24d0c 100%);
	border-radius: 42rpx;
	margin-top: 36rpx;
}
