}

.rank .rank-item {
  /* flex: 1; */
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666;
  height: 88rpx;
  line-height: 88rpx;
  width: 33.3%;
  float: left;
  /* display: flex;
  justify-content: center; */
}
.rank .rank-item .rank-name{
  float: left;
  width: 42%;
  position: relative;
  box-sizing: border-box;
  height: 100%;
  font-size:26rpx;
}
.rank .rank-item .rank-name.right{
  text-align: right;
  width: 58%;
}
.rank .rank-item .rank-name text.up{
  position: absolute;
  top: 0rpx;
  left: 10rpx;
  color: #bbb;
}
.rank .rank-item .rank-name text.down{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  color: #ddd;
}
.rank .rank-item .iconfont{
  font-size: 12rpx;
}
.rank .rank-item-hover{
  color: #F10216 ;
}
.rank .rank-item-hover .rank-name text.up-hover {
  color: #F10216 ;
}
.rank .rank-item-hover .rank-name text.down-hover {
  color: #F10216 ;
}



