/* search-area */
.search-area{
  box-sizing: content-box;
  background: linear-gradient(90deg, #F04521 0%, #F10216 100%);
  padding: 14rpx 30rpx 14rpx 30rpx;
  height: 62rpx;
  line-height: 62rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: fixed;
  left:0;
  right:0;
  z-index: 1;
  /* border-bottom:1rpx solid #EDEEEF; */
}
.search-form{
  height: 60rpx;
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-radius: 30rpx;
  padding: 0 30rpx;
}
.search-form .iconfont{
  color: #999;
  font-size: 32rpx;
}
.search-form input{ 
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.search-form input .inp-flg{
  color: #bbb;
}
.search-cancle{
  margin-left: 20rpx;
  font-size: 28rpx;
	color: rgba(38,38,38,1);
  /* width:84rpx;
  height:60rpx; */
  display:flex;
  justify-content:center;
  align-items:center;
  background-color:#fff; 
}
.search-area-shengdan{  
  background: #fff;
}
.search-area-shengdan .search-form{
  background: #F8F8F8 ;
}
.search-area-shengdan .search-btn{
  color: #666;
}
