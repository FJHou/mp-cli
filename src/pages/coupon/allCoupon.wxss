/**allCoupon.wxss**/
@import "commoncoupon.wxss";
.top-fixed button{
  line-height:normal;
  font-size:inherit;
  color:inherit;
  background:#fff;
}
page {
  background: #efeff4;
  height: 100%;
}

.wrap {
  width: 100%;
  min-height: 100%;
  background: #efeff4;
  box-sizing: border-box;
  font-family: Arial, Helvetica, sans-serif;
}

.coupon-list {
  padding-top: 41px;
  padding-bottom: 20rpx;
}

.coupon-tip {
  display: inline-block;
  position: absolute;
  top:2rpx;
  left: 98rpx;
  width: auto;
  padding-right: 32rpx;
}
.coupon-list .right-r{
  padding-right: 0;
}
.coupon-box .shop-coupon-font.coupon-font {
  text-indent:118rpx;
}
.coupon-box .coupon-font.freight-font {
  text-indent: 140rpx;
}
.info-icon{
  display: block;
  background: url(http://commonst.360buyimg.com/common/wx-images/info.png) 0 0 no-repeat;
  background-size: 100%;
  width: 32rpx;
  height: 32rpx;
}

.right-box {
  position: relative;
}
.right-box .right-l {
  width: 100%;
  box-sizing: border-box;
  padding-right: 40rpx;
}
.right_button{
  font-size: 22rpx;
  position: absolute;
  right: 20rpx;
  bottom: 25rpx;
  border: 1rpx solid #000;
  padding: 5rpx 12rpx;
  border-radius: 26rpx;
}
.right_button_freight {
  color: #48cbc5;
  border-color: #48cbc5;
}
.right_button_east {
  color: #5293d5;
  border-color: #5293d5;
}
.right_button_jing {
  color: #ff7d7c;
  border-color: #ff7d7c;
}
.unuse-tip {
  font-size: 24rpx;
  color: #686868;
  padding-top: 30rpx;
}
.unuse-tip .icon-tip {
  width: 24rpx;
  height: 26rpx;
  background-size: 100%;
  display: inline-block;
  margin-right: 12rpx;
  vertical-align: middle;
  background-repeat: no-repeat;  
  background-image: url('http://newbuz.360buyimg.com/jingshop/coupon/icon_tip_new.png');
}
.nomore-wrap {
  color: #9e9e9e;
  font-size: 20rpx;
  text-align: center;
}
.nomore-wrap .icon-nomore {
  height: 92rpx;
  width: 325rpx;
  display: block;
  margin: 50rpx auto 5rpx;
  background-size: 100%; 
  background-repeat: no-repeat;  
  background-image: url('http://newbuz.360buyimg.com/jingshop/coupon/icon_more.png');
}
.bottom-to-top {
  bottom: 268rpx;
}
.bi {
  font-weight: bold;
  font-family:'Helvetica';
}