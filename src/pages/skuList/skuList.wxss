/* pages/couponRetailStore/couponRetailStore.wxss */
@import '../../css/index.wxss';
/* 页面设置 */
page {
	background: #f3f3f7;
	height: 100%;
}
.clearfix:after {
	content: "";
	display: block;
	clear: both;
}
.page-con {
	min-height: 90%;
	position: relative;
	padding-bottom: 111rpx;
}
.noImg {
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	position: absolute;
	top: 20rpx;
	font-size: 26rpx;
	color: rgb(132, 132, 132);
}
.goods-list {
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	background: rgb(245, 245, 245);
}
.brand-shop-li {
	padding: 20rpx;
	background: white;
	width: calc((88%-10rpx)/2);
	margin-bottom: 20rpx;
}
/* .brand-shop-li:nth-child(2n){
  margin-right: 10rpx;
} */

/*底部logo  */
.loadmore-blank {
	height: 104rpx;
}
.loadmore {
	left: 0;
	right: 0;
	bottom: 0;
	position: absolute;
}
.load-nomore,
.load-ing {
	color: #808080;
	font-size: 20rpx;
	padding: 20rpx 0 20rpx;
	text-align: center;
}
.load-nomore .bot_logo {
	width: 43rpx;
	height: 37rpx;
	display: block;
	margin: 10rpx auto 0;
}

.couponInfo {
	font-size: 24rpx;
	height: 60rpx;
	line-height: 60rpx;
	color: rgb(46, 45, 45);
	width: 100%;
	text-align: center;
}
.goodsImg {
	width: 100%;
	height: 100%;
	display: block;
}
.goodsName {
	font-size: 22rpx;
	height: 60rpx;
	line-height: 33rpx;
	margin-top: 20rpx;
	color: rgb(46, 45, 45);
	overflow: hidden;
	text-overflow: clip;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.goods-image {
	width: calc(100%-100rpx);
	height: 250rpx;
	background-color: rgb(248, 248, 248);
	padding: 40rpx 50rpx;
}

.bs-comm {
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
	background: rgb(245, 245, 245);
}
.bs-comm-item {
	width: 370rpx;
	box-sizing: border-box;
	padding: 20rpx;
	margin-bottom: 20rpx;
	background: white;
}
.bs-comm-item image {
	width: 330rpx;
	height: 330rpx;
	margin-bottom: 20rpx;
	display: block;
}
.bs-ci-name {
	font-size: 22rpx;
	line-height: 30rpx;
	height: 60rpx;
	color: rgb(46, 45, 45);
	font-family: PingFangSC-Light;
	text-overflow: ellipsis;
	overflow: hidden;
}
.bs-ci-pri {
	line-height: 36rpx;
	font-size: 20rpx;
	font-family: PingFangSC-Light;
	color: rgb(132, 132, 132);
}
.bs-ci-prinum {
	font-family: JDZhengHei-01-Regular;
	font-size: 24rpx;
	color: rgb(243, 9, 3);
}
.bs-ci-prinum text {
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
}
