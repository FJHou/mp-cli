<import src='../../components/toast/toast.wxml' />

<!--我的反馈页.wxml-->
<view class="my-feedback">
  <view class="block-item xs text">
    购买和售后支持请咨询京东客服
  </view>
  <view class="block-item lg text">
    <view>
      <label class="ignore first">手机京东相关问题，请填写下表：</label>
    </view>

    <!--反馈类型-->
    <view class="flex-row" style="display: flex;">
      <view class="flex-view-item">
        <label class="span section__title ignore">反馈类型：</label>
      </view>
      <view class="flex-view-item">
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker">
            {{array[index]}}
            <image class="widget-arrow" src="http://commonst.360buyimg.com/common/wx-images/arrow.png" background-size="cover" />
          </view>
        </picker>
      </view>
    </view>

    <!--反馈内容-->
    <view>
      <label class="span ignore">反馈内容：</label>
    </view>
    <view>
      <textarea maxlength="1000" id="Mtextarea" bindblur="setTextareaVal">  </textarea>
    </view>
    <view class="spacer-lg"></view>

    <!--联系方式-->
    <view class="flex-row" style="display: flex;">
      <view class="flex-view-item" style="width: 20%;">
        <label class="span ignore">联系方式：</label>
      </view>
      <view class="flex-view-item" style="width: 80%; position: relative; top: 12rpx;">
        <input maxlength="20" type="number" placeholder="输入您的联系方式"  bindchange="bindPhoneChange"/>
      </view>
    </view>
  </view>
  <view class="btn-area">
    <form bindsubmit="modalTap" report-submit="true" class="default jd-red-bg">
      <button form-type="submit" class="message-push-btn default jd-red-bg">提交</button>
    </form>
  </view>
  <view class="spacer-xxl"></view>
</view>

<template is="toast" data="{{...toastData}}"></template>

