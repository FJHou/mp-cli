/* pages/demo/demo.wxss */
page{
  height: 100%;
  background: #363636;
}
.mem-bg{
  position: relative;
  padding-top: 204rpx;
  height: 100%;
  box-sizing: border-box;
  background-image: url('https://thunder.jd.com/jpass/img/bg.jpg');
  background-attachment: fixed;
  background-size: 100% 100%;
  background-position: center;
}
.not-scroll{
  overflow: hidden;
}
.member-box{
  width: 710rpx;
  margin: 0 auto;
}
.memcode-head{
  height: 167rpx;
  width: 710rpx;
  font-size: 32rpx;
  color: white;
  background: -webkit-linear-gradient(right,rgb(255,175,52) 0%,rgb(255, 62, 62),rgb(214,12,169) 100%);
  position: absolute;
  top: 73rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 1;
  padding: 20rpx 0 0 0;
  box-sizing: border-box; 
}
.memcode-usermsg{
  height: 100%;
  width: 100%;
  background: white;
  position: relative;
  z-index: 3;
  padding: 75rpx 0 0 0;
  box-sizing: border-box;
}
.memcode-username{
  color: rgb(46, 45, 45);
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin-bottom: 10rpx;
}
.memcode-score{
  width: 168rpx;
  height: 32rpx;
  border: 1px solid rgb(240,52,53);
  background: rgba(240, 52, 53, 0.1);
  border-radius: 16rpx;
  margin: 0 auto;
  box-sizing: border-box;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: rgb(240,52,53);
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.memcode-score-align{
  display: flex;
  align-items: center;
}
.memcode-score image{
  width: 22rpx;
  height: 22rpx;
}
.memcode-avatar-border{
  height: 126rpx;
  width: 126rpx;
  position: absolute;
  top: -32rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 2;
  background: -webkit-linear-gradient(right,rgb(255,86,60) 0%,rgb(247,53,82) 100%);
  border-radius: 63rpx;
}
.memcode-avatar{
  width: 108rpx;
  height: 108rpx;
  position: absolute;
  top: -43rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 3;
  border-radius: 54rpx;
}
.mem-setting{
  height: 76rpx;
  width: 76rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  right: 0;
  top: 20rpx;
  z-index: 5;
}
.mem-setting image{
  width: 36rpx;
  height: 36rpx;
  display: block;
}
.kt-member{
  position: absolute;
  top: 230rpx;
  width: 710rpx;
  left: 20rpx;
  z-index: 0;
  background: white;
  overflow: hidden;
  padding: 0 0 76rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.kt-tips{
  height: 588rpx;
  box-sizing: border-box;
  padding: 70rpx 0 0;
}
.kt-tips image{
  margin: 0 auto 70rpx;
  width: 260rpx;
  height: 260rpx;
  display: block;
}
.kt-tips view{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  line-height: 45rpx;
  color: rgb(46, 45, 45);
  text-align: center;
}
.kt-line{
  height: 0;
  border-top: 3rpx dashed rgba(151, 151, 151,0.2);
  position: relative;
  margin-bottom: 48rpx;
}
.kt-line view{
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  top: -14rpx;
  background: rgb(0, 0, 0);
  border-radius: 50%;
}
.kt-line view.kt-line-le{
  left: -18rpx;
}
.kt-line view.kt-line-ri{
  right: -18rpx;
}
.kt-agree{
  display: flex;
  justify-content: space-around;
  margin-bottom: 34rpx;
}
.kt-agree>view{
  display: flex;
}
.kt-agree .kt-agree-or{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  height: 38rpx;
  color: rgb(132, 132, 132);
  display: flex;
  align-items: center;
}
.kt-agree image{
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin-right: 4rpx;
}
.kt-agree .agree{
  color: rgb(46, 45, 45);
}
.kt-bt{
  width: 600rpx;
  height: 100rpx;
  border-radius: 50rpx;
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  background: -webkit-linear-gradient(left,rgb(214,214,214) 0%,rgb(191,191,191) 100%);
  margin: 0 auto;
}
.kt-agr-bt{
  background: -webkit-linear-gradient(left,rgb(241,0,0) 0%,rgb(255,79,24) 100%);
  box-shadow: 0 6rpx 12rpx 0 rgba(255, 62, 62,0.2);
}