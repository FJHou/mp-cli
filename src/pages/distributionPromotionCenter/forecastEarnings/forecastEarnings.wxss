/* 本月预估收益 */

.forecast-container .forecast-earnings-wrap {
  /* padding: 30rpx 30rpx 0rpx 30rpx; */
  border-top:20rpx solid #f7f7f7;
  padding: 0rpx 0rpx 0rpx 0rpx;
  background: #fff;
}

.forecast-container .forecast-earnings-innerbox {
  background: #FFFFFF;
  /* box-shadow: 0 0 30px 0 rgba(0, 0, 0, 0.10); */
  border-radius: 12px;
  padding: 40rpx 0 0rpx;
}

.forecast-container .forecast-earnings-title .iconfont {
  display: inline-block;
  margin-left: 10rpx;
}

.forecast-container .forecast-earnings-item-wrap {
  margin-top: 70rpx;
}

.forecast-container .forecast-earnings-item-wrap .forecast-earnings-item {
  border-left: 1rpx solid #eee;
}

.forecast-container .forecast-earnings-item-wrap .forecast-earnings-item:first-child {
  border-left: 0;
}

.forecast-container .forecast-earnings-item-wrap .forecast-earnings-item .fs-32 {
  margin-top: 10rpx;
  font-weight: bold;
}

/* tab时间筛选切换 */

.earnings-tab-wrap {
  padding: 28rpx 0 28rpx;
}

.earnings-tab-wrap .item {
  position: relative;
  display: inline-block;
  color: #999;
}

.earnings-tab-wrap .active-item {
  color: #333;
  font-weight: bold
}

.earnings-tab-wrap .active-item:after {
  position: absolute;
  left: 50%;
  top: 58rpx;
  margin-left: -30rpx;
  width: 60rpx;
  height: 4rpx;
  content: ' ';
  display: inline-block;
  border-bottom: 4rpx solid #F10216;
}

.earnings-tab-wrap .date-picker {
  flex: 2;
}

.earnings-tab-wrap .date-picker .icon-xiaosanjiao-xiangxia {
  display: inline-block;
  font-size: 22rpx;
  color: #bbb;
  margin-left: 10rpx;
}

/* 收益图表 */

.chart {
  height: 460rpx;
}

.chart-data {
  padding: 20rpx;
}

.chart-data .flex-item:first-child {
  border-right: 1rpx solid #eee;
}

.chart-data .fs-32 {
  margin-top: 20rpx;
}

/* 收益列表 */

.earnings-list-wrap {
  padding: 0 30rpx;
}

.earnings-list-wrap .itemTitle {
  font-size: 28rpx;
  line-height: 96rpx;
  font-weight: bold;
}

.earnings-list-wrap .itemList {
  border-bottom: 1rpx solid #eee;
  line-height: 68rpx;
}

.earnings-list-wrap .itemList:last-child {
  border-bottom: 0;
}

/* 预估收益弹层 */

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.pop-explain {
  position: fixed;
  margin-left: -319rpx;
  margin-top: -408rpx;
  top: 50%;
  left: 50%;
  border-radius: 10rpx;
  width: 638rpx;
  background: #fff;
  z-index: 10000;
}

.explain-top {
  padding: 20rpx 0;
  position: relative;
  z-index: 1;
  text-align: center;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.10);
  overflow: hidden
}

.explain-top .decorateLt {
  position: absolute;
  left: -160rpx;
  top: -200rpx;
  width: 308rpx;
  height: 308rpx;
  background: linear-gradient(180deg, #FD5130 0%, #fff 100%);
  z-index: 1;
  opacity: 0.1;
  border-radius: 50%;
  transform: rotate(25deg);
}

.explain-top .decorateLt:after {
  content: ' ';
  position: absolute;
  left: 64rpx;
  top: 64rpx;
  width: 180rpx;
  height: 180rpx;
  background: #fff;
  z-index: 2;
  border-radius: 50%;
}

.explain-top>text {
  position: relative;
  z-index: 1;
  font-size: 32rpx;
  line-height: 46rpx;
  color: #F34E56;
  padding: 0 100rpx;
}

.explain-top>text::before {
  position: absolute;
  left: 0;
  top: 20rpx;
  width: 89rpx;
  height: 8rpx;
  content: ' ';
  background: linear-gradient(90deg, #F34E56 0%, rgba(255, 255, 255, 0.05) 100%);
  border-radius: 4px;
  opacity: 0.3;
  transform: rotate(180deg);
}

.explain-top>text::after {
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 89rpx;
  height: 8rpx;
  content: ' ';
  background: linear-gradient(90deg, #F34E56 0%, rgba(255, 255, 255, 0.05) 100%);
  border-radius: 4px;
  opacity: 0.3;
}

.explain-top .close-btn {
  position: absolute;
  right: 30rpx;
  top: 15rpx;
  font-size: 28px;
  color: #999;
}

.explain-main {
  position: relative;
  z-index: 1;
  font-size: 28rpx;
  overflow: hidden
}

.explain-main .context-box {
  position: relative;
  z-index: 10;
}

.explain-main .decorateRb {
  position: absolute;
  right: -154rpx;
  bottom: 0;
  width: 308rpx;
  height: 308rpx;
  background: linear-gradient(180deg, #FD5130 0%, #fff 100%);
  z-index: 1;
  opacity: 0.1;
  border-radius: 50%;
  transform: rotate(25deg);
}

.explain-main .decorateRb:after {
  content: ' ';
  position: absolute;
  left: 64rpx;
  top: 64rpx;
  width: 180rpx;
  height: 180rpx;
  background: #fff;
  z-index: 2;
  border-radius: 50%;
}

.explain-title {
  position: relative;
  color: #333;
  padding: 30rpx 0 4rpx 72rpx;
  line-height: 32rpx;
}

.explain-title>text {
  position: absolute;
  left: 30rpx;
  color: #F10216;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  text-align: center;
  background: rgba(241, 2, 22, 0.1);
}

.explain-cont {
  color: #999;
  line-height: 40rpx;
  padding: 10rpx 30rpx 24rpx 72rpx;
}

